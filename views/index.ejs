    <script>
      function openModal(ide) {
        var ides=ide.toString()
        document.getElementById("myModal"+ides).style.display = "block";
      }
      
      function closeModal(ids) {
        var idem=ids.toString()
        document.getElementById("myModal"+idem).style.display = "none";
      }
      
      var slideIndex = 2;
      showSlides(slideIndex,j);
      
      function plusSlides(n,j) {
        
        showSlides(slideIndex += n,j);
      }
      
      function currentSlide(n,j) {
        showSlides(slideIndex = n,j);
      }
      
      function showSlides(n,j) {
        var i;
        var real=j.toString();
        var slides = document.getElementsByClassName("mySlides"+real);
        var dots = document.getElementsByClassName("demo");
        var captionText = document.getElementById("caption");
        if (n > slides.length) {slideIndex = 1}
        if (n < 1) {slideIndex = slides.length}
        for (i = 0; i < slides.length; i++) {
            slides[i].style.display = "none";
        }
        for (i = 0; i < dots.length; i++) {
            dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex-1].style.display = "block";
        dots[slideIndex-1].className += " active";
        
      }
      </script>
    
